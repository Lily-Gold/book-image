<div id="comment-form" class="-mt-5">
  <%= form_with model: [review, comment], data: { turbo: true } do |f| %>

    <% if comment.errors[:body].present? %>
      <p class="mb-2 text-sm text-red-600 font-medium">
        <%= comment.errors.full_messages_for(:body).first %>
      </p>
    <% end %>

    <div class="mb-3">
      <%= f.text_area :body,
            rows: 3,
            placeholder: "コメントを書く",
            class: "w-full border rounded-lg px-3 py-2 text-base
                    focus:outline-none focus:ring-2 focus:ring-[#004865]
                    #{comment.errors[:body].present? ? 'border-red-500' : 'border-gray-300'}" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "コメントする",
            class: "px-4 py-2 bg-[#986321] text-white text-sm rounded-lg hover:opacity-90 transition cursor-pointer" %>
    </div>

  <% end %>
</div>

