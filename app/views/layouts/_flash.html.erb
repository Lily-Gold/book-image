<div class="fixed top-5 right-5 space-y-3 z-50">
  <% flash.each do |key, message| %>
    <% color_class =
      case key
      when "notice" then "bg-green-100 border-l-4 border-green-500 text-green-800"
      when "alert"  then "bg-red-100 border-l-4 border-red-500 text-red-800"
      else "bg-blue-100 border-l-4 border-blue-500 text-blue-800"
      end %>

    <div
      data-controller="toast"
      data-toast-timeout-value="4000"
      class="<%= color_class %> px-4 py-3 rounded-lg shadow-md flex items-center justify-between gap-4 transform transition-all duration-300 opacity-0 translate-y-[-10px]"
    >
      <p class="font-medium"><%= message %></p>
      <button
        type="button"
        data-action="click->toast#close"
        class="text-sm text-gray-500 hover:text-gray-700 transition"
      >
        âœ•
      </button>
    </div>
  <% end %>
</div>
