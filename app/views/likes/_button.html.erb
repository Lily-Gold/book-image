<div id="like-button-<%= review.public_id %>">
  <% if user_signed_in? %>
    <% if current_user.liked?(review) %>
      <!-- いいね済み -->
      <%= button_to review_like_path(review),
                    method: :delete,
                    data: { turbo_stream: true },
                    class: "flex items-center gap-1 text-[#986321] cursor-pointer" do %>
        <svg xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 24 24"
             fill="currentColor"
             class="w-5 h-5">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                   2 5.42 4.42 3 7.5 3
                   c1.74 0 3.41.81 4.5 2.09
                   C13.09 3.81 14.76 3 16.5 3
                   19.58 3 22 5.42 22 8.5
                   c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span><%= review.likes_count %></span>
      <% end %>
    <% else %>
      <!-- 未いいね -->
      <%= button_to review_like_path(review),
                    method: :post,
                    data: { turbo_stream: true },
                    class: "flex items-center gap-1 text-[#986321] cursor-pointer" do %>
        <svg xmlns="http://www.w3.org/2000/svg"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             class="w-5 h-5">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                   2 5.42 4.42 3 7.5 3
                   c1.74 0 3.41.81 4.5 2.09
                   C13.09 3.81 14.76 3 16.5 3
                   19.58 3 22 5.42 22 8.5
                   c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span><%= review.likes_count %></span>
      <% end %>
    <% end %>
  <% else %>
    <!-- 未ログイン時 -->
    <%= button_to review_like_path(review),
                method: :post,
                class: "flex items-center gap-1 text-[#986321] cursor-pointer" do %>
      <svg xmlns="http://www.w3.org/2000/svg"
           viewBox="0 0 24 24"
           fill="none"
           stroke="currentColor"
           stroke-width="2"
           class="w-5 h-5">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                 2 5.42 4.42 3 7.5 3
                 c1.74 0 3.41.81 4.5 2.09
                 C13.09 3.81 14.76 3 16.5 3
                 19.58 3 22 5.42 22 8.5
                 c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
      <span><%= review.likes_count %></span>
    <% end %>
  <% end %>
</div>
