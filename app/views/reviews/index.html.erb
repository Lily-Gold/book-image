<div class="max-w-4xl mx-auto my-10 px-4">

  <!-- タイトル -->
  <h1 class="text-3xl font-bold text-[#004865] mb-8 text-center">
    レビュー一覧
  </h1>

  <!-- レビューが 0 件の場合 -->
  <% if @reviews.empty? %>
    <p class="text-center text-gray-500">まだレビューがありません。</p>
  <% end %>

  <!-- レビュー一覧 -->
  <div class="space-y-6">
    <% @reviews.each do |review| %>
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition">

        <!-- 上部：本の情報 -->
        <div class="flex items-start gap-4">

          <!-- 書影 -->
          <% if review.book.cover_url.present? %>
            <img src="<%= review.book.cover_url %>"
                 class="w-20 h-28 object-cover rounded shadow">
          <% else %>
            <div class="w-20 h-28 bg-gray-200 rounded flex items-center justify-center text-xs text-gray-500">
              No Image
            </div>
          <% end %>

          <!-- 本のタイトル・著者 -->
          <div>
            <h2 class="text-xl font-semibold text-[#004865]">
              <%= review.book.title %>
            </h2>

            <p class="text-sm text-gray-600">
              <%= review.book.author %>
            </p>

            <p class="text-sm mt-1">
              <span class="px-2 py-1 text-white text-xs rounded"
                    style="background-color: <%= review.image_tag.color %>;">
                <%= review.image_tag.name %>
              </span>
            </p>
          </div>
        </div>

        <!-- レビュー本文（50文字で切る） -->
        <p class="mt-4 text-gray-700">
          <%= truncate(review.content, length: 80, separator: " ") %>
        </p>

        <!-- 詳細ページへ -->
        <div class="mt-4 text-right">
          <%= link_to "続きを読む →",
                      review_path(review),
                      class: "text-[#986321] font-semibold hover:underline" %>
        </div>

      </div>
    <% end %>
  </div>

</div>
