<%= link_to notifications_path,
    class: "relative inline-block translate-x-10" do %>

  <svg xmlns="http://www.w3.org/2000/svg"
       viewBox="0 0 24 24"
       fill="none"
       stroke="currentColor"
       class="w-8 h-8 text-white hover:text-gray-200 transition">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.2"
          d="M12 22a2 2 0 002-2H10a2 2 0 002 2zm6-6V11a6 6 0 10-12 0v5l-2 2h16l-2-2z" />
  </svg>

  <% unread_count = current_user.notifications.unread.count %>
  <% if unread_count > 0 %>
    <span
      class="absolute -top-0.5 -right-0.5 pointer-events-none
             bg-red-500 text-white text-[10px]
             rounded-full shadow-md
             min-w-[1rem] h-[1rem]
             flex items-center justify-center
             px-1 leading-none">
      <%= unread_count > 99 ? "99+" : unread_count %>
    </span>
  <% end %>
<% end %>
