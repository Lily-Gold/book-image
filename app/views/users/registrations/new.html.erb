<div class="flex justify-center items-center min-h-[87vh]" style="background-color: #F4F4F4;">
  <div class="bg-white pt-5 pb-6 px-8 rounded-xl shadow-lg w-full max-w-md my-[2rem]">
    <h2 class="text-3xl font-bold text-center text-[#004865] mb-6">新規登録</h2>

    <%= render "users/shared/social_login" %>

    <div class="flex items-center justify-center my-5">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="mx-3 text-[#5D5D5D] text-sm">または</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-3" }) do |f| %>
      <div class="field">
        <%= f.label :name, "ユーザー名", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full border border-gray-300 rounded-lg p-2 text-base focus:outline-none focus:ring-2 focus:ring-[#004865]" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded-lg p-2 text-base focus:outline-none focus:ring-2 focus:ring-[#004865]" %>
      </div>

      <div class="field">
        <div class="flex items-center justify-between mb-1">
          <%= f.label :password, "パスワード", class: "text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-[#5D5D5D] whitespace-nowrap pr-[0.25rem]">※ <%= @minimum_password_length %>文字以上</p>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-lg p-2 text-base focus:outline-none focus:ring-2 focus:ring-[#004865]" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-lg p-2 text-base focus:outline-none focus:ring-2 focus:ring-[#004865]" %>
      </div>

      <div class="actions mt-13">
        <%= f.submit "登録", class: "w-full bg-[#986321] text-white text-lg py-2.5 rounded-lg hover:opacity-90 transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "users/shared/links" %>
    </div>

    <div class="-mt-10 text-center text-xs text-gray-400 leading-relaxed">
      <div class="inline-block text-left">
        アカウント登録をもって、
        <span class="text-gray-400 font-medium">利用規約</span>
        および
        <span class="text-gray-400 font-medium">プライバシーポリシー</span>
        に<br>
        同意したものとみなします。
        <span class="text-gray-400">(※ 現在は未実装です)</span>
      </div>
    </div>
  </div>
</div>
